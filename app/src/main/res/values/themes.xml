<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.LocationSimulator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 全屏显示，隐藏状态栏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 沉浸式状态栏 -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!-- 状态栏透明 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- 导航栏颜色 -->
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <!-- Theme with ActionBar for activities that need it -->
    <style name="Theme.LocationSimulator.WithActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
